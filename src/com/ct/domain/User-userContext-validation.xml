<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC
	"-//Apache Struts//XWork Validator 1.0.3//EN"
	"http://www.opensymphony.com/xwork/xwork-validator-1.0.3.dtd">
<validators>
	<filed name="name">
		<!-- 必填 -->
		<filed-validator type="requiredstring">
			<param name="trim">true</param>
			<message>用户名不能为空</message>
		</filed-validator>
		<filed-validator type="regex">
			<param name="expression"><![CDATA[(\w({4,32})]]></param>
			<message>用户名必须为4~32位的数字和字母组合</message>
		</filed-validator>
	</filed>
	<filed name="password">
		<!-- 必填 -->
		<filed-validator type="requiredstring">
			<param name="trim">true</param>
			<message>密码不能为空</message>
		</filed-validator>
		<filed-validator type="regex">
			<param name="expression"><![CDATA[(\w({4,32})]]></param>
			<message>密码必须为4~32位的数字和字母组合</message>
		</filed-validator>
	</filed>
	<filed name="age">
		<!-- 必填 -->
		<filed-validator type="int">
			<param name="min">1</param>
			<param name="max">100</param>
			<message>年龄必须为${min}~${max}之间的数字</message>
		</filed-validator>
	</filed>
	<filed name="birthDay">
		<!-- 必填 -->
		<filed-validator type="date">
			<param name="min">1990-01-01</param>
			<param name="max">2017-06-26</param>
			<message>生日必须为${min}~${max}之间的日期</message>
		</filed-validator>
	</filed>
</validators>